{
  "version": 2,
  "buildCommand": "npm run build:ssr",
  "outputDirectory": "dist/seatguard-reservation-frontend",
  "rewrites": [
    {
      "source": "/proxy(.*)",
      "destination": "/api/proxy"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|ico|svg|json|woff|woff2|ttf|map|txt)",
      "destination": "/$1.$2"
    },
    {
      "source": "/(.*)",
      "destination": "/api/ssr"
    }
  ]
}
